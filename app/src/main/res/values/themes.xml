<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Layout" parent="Theme.MaterialComponents.DayNight.DarkActionBar"> <!--Si fiquem no action bar no surt la barra de dalt-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.Layout.MyTextView</item>
    </style>

    <!-- Tema de colors. -->
    <style name="Theme.Layout.MyTheme">
        <item name="colorPrimary">@color/Lime</item>
        <item name="colorPrimaryVariant">@color/Lime</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:toolbarStyle">@color/Green</item>
    </style>

    <!-- text view.-->
    <style name="Theme.Layout.MyTextView" parent="Widget.AppCompat.TextView">
        <!-- <item name="android:textSize">100sp</item> -->
    </style>

</resources>