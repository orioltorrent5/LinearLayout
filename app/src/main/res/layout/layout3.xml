<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/tv_15"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!--Primer bloc-->
    <LinearLayout
        android:id="@+id/ll_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="33dp">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Green"
            android:text="Oriol Torrent"
            android:textSize="15sp"
            android:layout_margin="8sp"
            android:padding="0dp"
            />
    </LinearLayout>

    <!--Segon bloc-->
    <LinearLayout
        android:id="@+id/ll_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Yellow">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/Red"
            android:text="Oriol Torrent Oriol Torrent  Oriol Torrent Oriol Torrent Oriol Torrent Oriol Torrent Oriol Torrent Oriol Torrent Oriol Torrent "
            android:textAlignment="center"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_margin="10sp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/tv_4"
            android:layout_margin="10sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/Green"
            android:padding="10dp"
            android:text="Oriol Torrent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/Blue"
            android:text="Oriol Torrent"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_margin="10sp"
            android:padding="10dp"
            />

    </LinearLayout>

    <!--Tercer bloc-->
    <LinearLayout
        android:id="@+id/ll_3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Fuchsia">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:background="@color/Aqua"
            android:text="Oriol Torrent"
            android:textAlignment="center"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_margin="10sp"
            android:padding="10dp"
            />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:background="@color/Green"
            android:text="Oriol Torrent Oriol Torrent Oriol Torrent Oriol Torrent Oriol Torrent Oriol Torrent Oriol Torrent"
            android:textSize="15sp"
            android:layout_margin="10sp"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_margin="10sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@color/Red"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="7sp"
                android:layout_weight="3"
                android:background="@color/white"
                android:padding="10dp"
                android:text="Oriol Torrent Oriol Torrent Oriol Torrent Oriol Torrent Oriol Torrent Oriol Torrent"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="6sp"
                android:layout_weight="2"
                android:background="@color/Aqua"
                android:padding="10dp"
                android:text="Oriol Torrent"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



